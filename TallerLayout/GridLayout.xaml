<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerLayout.GridLayout"
             Title="GridLayout">

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Primer cuadrado -->
            <BoxView Grid.Row="0" Grid.Column="0" BackgroundColor="Red"/>

            <!-- Segundo cuadrado -->
            <BoxView Grid.Row="0" Grid.Column="1" BackgroundColor="Green"/>

            <!-- Tercer cuadrado -->
            <BoxView Grid.Row="1" Grid.Column="0" BackgroundColor="Blue"/>

            <!-- Cuarto cuadrado -->
            <BoxView Grid.Row="1" Grid.Column="1" BackgroundColor="Yellow"/>

            <!-- BotÃ³n -->
            <Button Text="Ir a StackLayout" Clicked="Button_Clicked"
                    Grid.Row="1" Grid.Column="1"
                    VerticalOptions="End" HorizontalOptions="End"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>