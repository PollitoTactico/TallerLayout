<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerLayout.StackLayoutDemo"
             Title="TallerLayout.StackLayoutDemo">
    <VerticalStackLayout>
        <Label 
            Text="Etiqueta 1"
            FontSize="24"
            TextColor="White"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            BackgroundColor="Blue"/>

        <Label 
            Text="Etiqueta 2"
            FontSize="18"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            BackgroundColor="Cyan"/>

        <Label 
            Text="Etiqueta 3"
            FontSize="12"
            TextColor="Black"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            BackgroundColor="Red"/>

        <Button 
            Text="Go to Flex Layout"
            Clicked="OnButtonClicked" />



    </VerticalStackLayout>
</ContentPage>